  <artifactId>exo.ecm.wcm.demo.config</artifactId>
  <packaging>jar</packaging>
  <name>eXo WCM Demo configuration jar</name>
  <build>
    <resources>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.xml</include>
          <include>**/*.properties</include>
        </includes>
