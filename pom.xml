<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	
	<parent>
		<groupId>org.exoplatform</groupId>
		<artifactId>exo.parent</artifactId>
		<version>7</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.exoplatform.ecm</groupId>
	<artifactId>wcm</artifactId>
        <name>eXo ECM - WCM</name>
        <version>2.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<scm>
		<connection>scm:svn:http://svn.exoplatform.org/projects/ecm/wcm/branches/2.0.x</connection>
		<developerConnection>scm:svn:http://svn.exoplatform.org/projects/ecm/wcm/branches/2.0.x</developerConnection>
		<url>http://fisheye.exoplatform.org/browse/projects/ecm/wcm/branches/2.0.x</url>
	</scm>

	<properties>
    <exo.product.name>exo-wcm</exo.product.name>
    <exo.product.specification>2.0</exo.product.specification>

    <org.exoplatform.kernel.version>2.0.9</org.exoplatform.kernel.version>
    <org.exoplatform.core.version>2.1.7</org.exoplatform.core.version>
    <org.exoplatform.ws.version>1.3.5</org.exoplatform.ws.version>
    <org.exoplatform.jcr.version>1.10.6</org.exoplatform.jcr.version>
    <org.exoplatform.portletcontainer.version>2.0.8</org.exoplatform.portletcontainer.version>
    <org.exoplatform.portal.version>2.5.7</org.exoplatform.portal.version>
    <org.exoplatform.webos.version>1.5.4</org.exoplatform.webos.version>
    <org.exoplatform.ecm.workflow.version>1.0.5</org.exoplatform.ecm.workflow.version>
    <org.exoplatform.ecm.dms.version>2.5.3</org.exoplatform.ecm.dms.version>

<org.exoplatform.exopackage.version>1.2.0</org.exoplatform.exopackage.version>
    <org.exoplatform.mvnexobuild.version>1.2.0</org.exoplatform.mvnexobuild.version>

    <org.exoplatform.ecm.jbpm.version>3.0.2</org.exoplatform.ecm.jbpm.version>
    <bonita.version>4.0</bonita.version>        

    <!-- tests default config -->
    <maven.test.skip>true</maven.test.skip>
    <maven.test.failure.ignore>true</maven.test.failure.ignore>  
  </properties>
	
	<modules>
		<module>benchmark</module>
		<module>component/wcm</module>
		<module>component/publication</module>
		<module>component/search</module>
		<module>component/newsletter</module>
		<module>webui/wcm</module>
		<module>portlets/presentation</module>
		<module>portlets/searches</module>
		<module>portlets/newsletter</module>
		<module>portlets/formgenerator</module>
		<module>connectors/fckeditor</module>
		<module>web/eXoWCMResources</module>
		<module>web/wcmportal</module>
		<module>packaging</module>
	</modules>

	<build>
		<resources>
			<resource>
				<directory>src/main/java</directory>
				<includes>
					<include>**/*.properties</include>
					<include>**/*.xml</include>
				</includes>
			</resource>
		</resources>
		
		<testResources>
			<testResource>
				<directory>src/test/java</directory>
				<includes>
					<include>**/*.properties</include>
					<include>**/*.xml</include>
				</includes>
			</testResource>
		</testResources>
		
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<systemProperties>
						<property>
							<name>maven.exoplatform.dir</name>
							<value>${exo.directory.base}/projects/exo-platform</value>
						</property>
						<property>
							<name>mock.portal.dir</name>
							<value>${exo.projects.directory.src}/portal/trunk/web/portal/src/main/webapp</value>
						</property>
						<property>
							<name>org.apache.commons.logging.Log</name>
							<value>org.apache.commons.logging.impl.SimpleLog</value>
						</property>
						<property>
							<name>org.apache.commons.logging.simplelog.defaultlog</name>
							<value>info</value>
						</property>
						<property>
							<name>org.apache.commons.logging.simplelog.log.[eXo]</name>
							<value>debug</value>
						</property>
						<property>
							<name>org.apache.commons.logging.simplelog.log.net.hibernate</name>
							<value>warn</value>
						</property>
						<property>
							<name>java.naming.factory.initial</name>
							<value>org.exoplatform.services.naming.SimpleContextFactory</value>
						</property>
					</systemProperties>
				</configuration>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>compile</id>
						<phase>compile</phase>
						<configuration>
							<tasks>
								<copy failonerror="false" todir="${project.build.directory}/${project.build.finalName}/WEB-INF/classes">
									<fileset dir="${basedir}/src/main/webapp/WEB-INF/classes">
										<include name="**/*_en.properties" />
									</fileset>
									<globmapper from="*_en.properties" to="*.properties" />
								</copy>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	
</project>
