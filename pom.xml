<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	
	<parent>
		<groupId>org.exoplatform</groupId>
		<artifactId>parent</artifactId>
		<version>1.1.1</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.exoplatform.ecm</groupId>
	<artifactId>wcm</artifactId>
	<name>eXo WCM Config</name>
	<version>1.3-SNAPSHOT</version>
	<packaging>pom</packaging>

	<modules>
		<module>benchmark</module>
		<module>component/wcm</module>
		<module>component/publication</module>
		<module>component/search</module>
		<module>component/newsletter</module>
		<module>ext/publication</module>
		<module>webui/wcm</module>
		<module>portlets/presentation</module>
		<module>portlets/searches</module>
		<module>portlets/newsletter</module>
		<module>portlets/formgenerator</module>
		<module>connectors/fckeditor</module>
		<module>web/eXoWCMResources</module>
		<module>web/wcmportal</module>
		<module>packaging</module>
	</modules>

	<build>
		<resources>
			<resource>
				<directory>src/main/java</directory>
				<includes>
					<include>**/*.properties</include>
					<include>**/*.xml</include>
				</includes>
			</resource>
		</resources>
		
		<testResources>
			<testResource>
				<directory>src/test/java</directory>
				<includes>
					<include>**/*.properties</include>
					<include>**/*.xml</include>
				</includes>
			</testResource>
		</testResources>
		
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<skip>${exo.test.skip}</skip>
					<useFile>false</useFile>
					<forkMode>pertest</forkMode><!--once , pertest -->
					<testFailureIgnore>false</testFailureIgnore>
					<includes>
						<include implementation="java.lang.String">**/${test.classes}*.java</include>
					</includes>
					<systemProperties>
						<property>
							<name>maven.exoplatform.dir</name>
							<value>${exo.directory.base}/projects/exo-platform</value>
						</property>
						<property>
							<name>mock.portal.dir</name>
							<value>${exo.projects.directory.src}/portal/trunk/web/portal/src/main/webapp</value>
						</property>
						<property>
							<name>org.apache.commons.logging.Log</name>
							<value>org.apache.commons.logging.impl.SimpleLog</value>
						</property>
						<property>
							<name>org.apache.commons.logging.simplelog.defaultlog</name>
							<value>info</value>
						</property>
						<property>
							<name>org.apache.commons.logging.simplelog.log.[eXo]</name>
							<value>debug</value>
						</property>
						<property>
							<name>org.apache.commons.logging.simplelog.log.net.hibernate</name>
							<value>warn</value>
						</property>
						<property>
							<name>java.naming.factory.initial</name>
							<value>org.exoplatform.services.naming.SimpleContextFactory</value>
						</property>
					</systemProperties>
				</configuration>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>compile</id>
						<phase>compile</phase>
						<configuration>
							<tasks>
								<copy failonerror="false" todir="${project.build.directory}/${project.build.finalName}/WEB-INF/classes">
									<fileset dir="${basedir}/src/main/webapp/WEB-INF/classes">
										<include name="**/*_en.properties" />
									</fileset>
									<globmapper from="*_en.properties" to="*.properties" />
								</copy>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	
	<profiles>
		<profile>
			<id>default</id>
			<activation>
				<property><name>default</name></property>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<org.exoplatform.kernel.version>2.0.8</org.exoplatform.kernel.version>
				<org.exoplatform.core.version>2.1.6</org.exoplatform.core.version>
				<org.exoplatform.ws.version>1.3.4</org.exoplatform.ws.version>
				<org.exoplatform.jcr.version>1.10.5</org.exoplatform.jcr.version>
				<org.exoplatform.pc.version>2.0.7</org.exoplatform.pc.version>
				<org.exoplatform.portal.version>2.5.6.1</org.exoplatform.portal.version>
				<org.exoplatform.ecm.dms.version>2.5.2</org.exoplatform.ecm.dms.version>
				<exo.test.classes>Test</exo.test.classes>
				<exo.test.skip>true</exo.test.skip>
			</properties>
		</profile>	
	</profiles>
	
	<properties>
			<exo.product.name>exo-wcm</exo.product.name>
			<exo.product.specification>1.3</exo.product.specification>
	</properties>
	
	<scm>
		<connection>scm:svn:http://svn.exoplatform.org/projects/ecm/wcm/trunk</connection>
		<developerConnection>scm:svn:http://svn.exoplatform.org/projects/ecm/wcm/trunk</developerConnection>
		<url>http://fisheye.exoplatform.org/browse/projects/ecm/wcm/trunk</url>
	</scm>
</project>