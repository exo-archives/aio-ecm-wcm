<project>
  <parent>
    <groupId>org.exoplatform.wcm</groupId>
    <artifactId>config</artifactId>
    <version>trunk</version>
  </parent> 

  <modelVersion>4.0.0</modelVersion>
  <artifactId>exo.wcm.web.portal</artifactId>
  <packaging>war</packaging> 
  <version>${org.exoplatform.wcm.version}</version>
  <name>eXo WCM Portal web module</name>
  <build>    
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.0.2</version>
        <configuration>
          <webResources>
            <resource>
              <!-- this is relative to the pom.xml directory -->
              <directory>${exo.projects.directory.src}/portal/trunk/web/portal/src/main/webapp</directory>
              <excludes>
                <exclude>index.jsp</exclude>
                <exclude>WEB-INF/web.xml</exclude>                     
                <exclude>WEB-INF/conf/</exclude>                                     
                <exclude>WEB-INF/classes/locale/navigation/</exclude>
                <exclude>fckeditor/fckconfig.js</exclude>                                     
              </excludes>
            </resource>
            <resource>
              <!-- Make sure all bundles are copied, including the default ones (generated by ant-run) -->
              <directory>${exo.projects.directory.src}/portal/trunk/web/portal/target/exo.portal.web.portal-${org.exoplatform.portal.version}</directory>
              <includes>
                <include>WEB-INF/classes/locale/portal/*.properties</include>                     
              </includes>
            </resource>
            <resource>
              <!-- Make sure all bundles are copied, including the default ones (generated by ant-run) -->
              <directory>${exo.projects.directory.src}/ecm/trunk/web/ecmportal/target/exo.ecm.web.portal-${org.exoplatform.ecm.version}</directory>
              <includes>
                <include>WEB-INF/classes/locale/ecm/</include>                     
              </includes>
            </resource>
            <resource>
              <!-- Make sure all bundles are copied, including the default ones (generated by ant-run) -->
              <directory>${exo.projects.directory.src}/portal/trunk/web/portal/target/exo.portal.web.portal-${org.exoplatform.portal.version}</directory>
              <includes>
                <include>WEB-INF/conf/uiconf/</include>                     
              </includes>
            </resource>
            <resource>
              <!-- Make sure PageTemplates are copied, (generated by ant-run) -->
              <directory>${exo.projects.directory.src}/portal/trunk/web/portal/target/exo.portal.web.portal-${org.exoplatform.portal.version}</directory>
              <includes>
                <include>WEB-INF/conf/portal/template/</include>                     
              </includes>
            </resource>            
            <resource>
              <!-- Make sure all bundles are copied, including the default ones (generated by ant-run) -->
              <directory>${exo.projects.directory.src}/ecm/trunk/web/ecmportal/target/exo.ecm.web.portal-${org.exoplatform.ecm.version}</directory>
              <includes>
                <include>WEB-INF/conf/ecm/artifacts/</include>                     
              </includes>
            </resource>
            <resource>
              <directory>${exo.projects.app.mvn.repo}/org/exoplatform/ecm/bp/exo.ecm.bp.jbpm.holiday/${org.exoplatform.ecm.version}</directory>
              <targetPath>WEB-INF/conf/bp</targetPath>
              <includes><include>*.jar</include></includes>
            </resource>
            <resource>
              <directory>${exo.projects.app.mvn.repo}/org/exoplatform/ecm/bp/exo.ecm.bp.jbpm.payraise/${org.exoplatform.ecm.version}</directory>
              <targetPath>WEB-INF/conf/bp</targetPath>
              <includes><include>*.jar</include></includes>
            </resource>                                                           
          </webResources>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
