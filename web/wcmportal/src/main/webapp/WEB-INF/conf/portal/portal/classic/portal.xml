<?xml version="1.0" encoding="ISO-8859-1"?>
<portal-config>
  <portal-name>classic</portal-name>
  <locale>en</locale>
  <access-permissions>Everyone</access-permissions>
  <edit-permission>*:/platform/web-contributors</edit-permission>
  <creator>root</creator>
    
  <portal-layout> 		
 	  <application>
	    <instance-id>portal#classic:/presentation/SiteAdministrationPortlet/classic-admintoolbar</instance-id>
	    <show-info-bar>false</show-info-bar>
    </application>	  	
      
	  <container id="ClassicBanner" template="system:/groovy/wcm/webui/container/UITableColumnContainer.gtmpl">
      <container id="ClassicLogo" template="system:/groovy/portal/webui/container/UIColumnContainer.gtmpl">
		<factory-id>ColumnContainer</factory-id>
        <application>
          <instance-id>portal#classic:/presentation/SingleContentViewer/classic-logo</instance-id>
          <show-info-bar>false</show-info-bar>
        </application>
      </container>
      <container id="ClassicSignin" template="system:/groovy/portal/webui/container/UIColumnContainer.gtmpl">
		  <factory-id>ColumnContainer</factory-id>
				<application>
				  <instance-id>portal#classic:/presentation/SingleContentViewer/classic-signin</instance-id>
				  <show-info-bar>false</show-info-bar>
				</application>
      </container>
	  <container id="ClassicSearchBox" template="system:/groovy/portal/webui/container/UIColumnContainer.gtmpl">
		<factory-id>ColumnContainer</factory-id>
        <application>
				  <instance-id>portal#classic:/presentation/SingleContentViewer/classic-searchbox</instance-id>
				  <show-info-bar>false</show-info-bar>
				</application>
      </container>      
    </container>	 
	  	  
	  <page-body> </page-body>
	  
	  <application>
	    <instance-id>portal#classic:/presentation/SingleContentViewer/classic-footer</instance-id>
	    <show-info-bar>false</show-info-bar>
	  </application>
  </portal-layout>
  
</portal-config>
