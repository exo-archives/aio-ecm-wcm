<?xml version="1.0" encoding="ISO-8859-1"?>
<portal-config>
  <portal-name>acme</portal-name>
  <locale>en</locale>
  <access-permissions>Everyone</access-permissions>
  <edit-permission>*:/platform/administrators</edit-permission>
  <creator>root</creator>
    
 	<portal-layout> 		
 	  <application>
	    <instance-id>portal#acme:/web-presentation/SiteAdministrationPortlet/acme-admintoolbar</instance-id>
	    <show-info-bar>false</show-info-bar>
  	</application>	  
  	
  	<container id="ACMEPortalContainer" template="system:/groovy/portal/webui/container/UIContainer.gtmpl" height="141px">
  		<container id="BannerContainer" template="system:/groovy/portal/webui/container/UITableColumnContainer.gtmpl">
  			<container id="Banner" template="system:/groovy/portal/webui/container/UIContainer.gtmpl" width="262px" height="65px">
  				<application>
				    <instance-id>portal#acme:/web-presentation/SingleContentViewer/acme-banner</instance-id>
				    <show-info-bar>false</show-info-bar>
				  </application>
  			</container>
  			<container id="Search" template="system:/groovy/portal/webui/container/UIContainer.gtmpl">
	  			<application>
				    <instance-id>portal#acme:/web-searches/WCMAdvanceSearchPortlet/acme-searchbox</instance-id>
				    <show-info-bar>false</show-info-bar>
				  </application>
  			</container>
  		</container>
  		<container id="21031986" template="system:/groovy/portal/webui/container/UIContainer.gtmpl">
	  		<application>
			  	<instance-id>portal#acme:/web/NavigationPortlet/acme-toolbar</instance-id>
	  		  <show-info-bar>false</show-info-bar>
			  </application>
  		</container>
  	</container>
		
	  <application>
	    <instance-id>portal#acme:/web/BreadcumbsPortlet/acme-breadcumbs</instance-id>
	    <show-info-bar>false</show-info-bar>
	  </application>
	
	  <page-body> </page-body>
	  
	  <application>
	    <instance-id>portal#acme:/web-presentation/SingleContentViewer/acme-footer</instance-id>
	    <show-info-bar>false</show-info-bar>
	  </application>
  </portal-layout>
  
</portal-config>
