<?xml version="1.0" encoding="ISO-8859-1"?>
<portal-config>
  <portal-name>acme</portal-name>
  <locale>en</locale>
  <access-permissions>Everyone</access-permissions>
  <edit-permission>*:/platform/web-contributors</edit-permission>
  <creator>root</creator>
    
 	<portal-layout> 		
 	  <application>
	    <instance-id>portal#acme:/web-presentation/SiteAdministrationPortlet/acme-admintoolbar</instance-id>
	    <show-info-bar>false</show-info-bar>
  	</application>	  
  	
  	<container id="BannerContainer" template="system:/groovy/wcm/webui/container/UITableColumnContainer.gtmpl">
  		<container id="Banner" template="system:/groovy/portal/webui/container/UIContainer.gtmpl">
  			<application>
			    <instance-id>portal#acme:/web-presentation/SingleContentViewer/acme-banner</instance-id>
			    <show-info-bar>false</show-info-bar>
			  </application>
  		</container>
  		<container id="WCMSearchBox" template="system:/groovy/portal/webui/container/UIContainer.gtmpl">
	  		<application>
			    <instance-id>portal#acme:/web-presentation/SingleContentViewer/acme-searchbox</instance-id>
			    <show-info-bar>false</show-info-bar>
			  </application>
  		</container>
  	</container>
  		
  	<application>
		 	<instance-id>portal#acme:/web-presentation/SingleContentViewer/acme-navigation</instance-id>
  	  <show-info-bar>false</show-info-bar>
		</application>
  	
  	<application>
			<instance-id>portal#acme:/web-presentation/SingleContentViewer/acme-breadcrumb</instance-id>
	  	<show-info-bar>false</show-info-bar>
	  </application>
		
	  <page-body> </page-body>
	  
	  <application>
	    <instance-id>portal#acme:/web-presentation/SingleContentViewer/acme-footer</instance-id>
	    <show-info-bar>false</show-info-bar>
	  </application>
  </portal-layout>
  
</portal-config>
