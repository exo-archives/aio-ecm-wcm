<?xml version="1.0" encoding="ISO-8859-1"?>
<portal-config>
  <portal-name>@owner@</portal-name>
  <locale>en</locale>
  <access-permissions>Everyone</access-permissions>
  <edit-permission>*:/platform/administrators</edit-permission>
  <creator>root</creator>
    
 	<portal-layout> 		
 	  <application>
	    <instance-id>portal#@owner@:/web-presentation/SiteAdministrationPortlet/@owner@-admintoolbar</instance-id>
	    <show-info-bar>false</show-info-bar>
  	</application>	  
  	
  	<container id="@owner@PortalContainer" template="system:/groovy/portal/webui/container/UIContainer.gtmpl" height="141px">
  		<container id="BannerContainer" template="system:/groovy/wcm/webui/container/UITableColumnContainer.gtmpl">
  			<container id="Banner" template="system:/groovy/portal/webui/container/UIContainer.gtmpl">
  				<application>
				    <instance-id>portal#@owner@:/web-presentation/SingleContentViewer/@owner@-banner</instance-id>
				    <show-info-bar>false</show-info-bar>
				  </application>
  			</container>
  			<container id="Search" template="system:/groovy/portal/webui/container/UIContainer.gtmpl">
	  			<application>
				    <instance-id>portal#@owner@:/web-presentation/SingleContentViewer/@owner@-searchbox</instance-id>
				    <show-info-bar>false</show-info-bar>
				  </application>
  			</container>
  		</container>
  		<container id="Navigation" template="system:/groovy/portal/webui/container/UIContainer.gtmpl">
	  		<application>
			  	<instance-id>portal#@owner@:/web-presentation/SingleContentViewer/@owner@-navigation</instance-id>
	  		  <show-info-bar>false</show-info-bar>
			  </application>
  		</container>
  	</container>
  	
  	<application>
			<instance-id>portal#@owner@:/web-presentation/SingleContentViewer/@owner@-breadcrumb</instance-id>
	  	<show-info-bar>false</show-info-bar>
	  </application>
		
	  <page-body> </page-body>
	  
	  <application>
	    <instance-id>portal#@owner@:/web-presentation/SingleContentViewer/@owner@-footer</instance-id>
	    <show-info-bar>false</show-info-bar>
	  </application>
  </portal-layout>
  
</portal-config>
