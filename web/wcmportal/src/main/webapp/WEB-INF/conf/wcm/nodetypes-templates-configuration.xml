<?xml version="1.0" encoding="ISO-8859-1"?>

<configuration>
  
   <external-component-plugins>
    <target-component>org.exoplatform.services.cms.templates.TemplateService</target-component>
    	<component-plugin>
	      <name>FilterContentTypeForWCMSpecificFolder</name>
	      <set-method>addContentTypeFilterPlugin</set-method>
	      <type>org.exoplatform.services.cms.templates.ContentTypeFilterPlugin</type>
	      <description>this plugin is used to filter wcm nodetype</description>
	      <init-params>	        
	        <value-param>
	        	<name>repository</name>
	        	<value>repository</value>
	        </value-param>	        
          <object-param>
            <name>cssFolderFilter</name>
            <description>only exo:cssFile can be created in exo:cssFolder</description>
            <object type="org.exoplatform.services.cms.templates.ContentTypeFilterPlugin$FolderFilterConfig">
            	<field  name="folderType"><string>exo:cssFolder</string></field>            	
              <field  name="contentTypes">
                <collection type="java.util.ArrayList">
                 	<value><string>exo:cssFile</string></value>
                </collection>
            	</field>
            </object>
           </object-param>
           <object-param>
            <name>jsFolderFolderFilter</name>
            <description>only exo:cssFile can be created in exo:cssFolder</description>
            <object type="org.exoplatform.services.cms.templates.ContentTypeFilterPlugin$FolderFilterConfig">
            	<field  name="folderType"><string>exo:jsFolder</string></field>            	
              <field  name="contentTypes">
                <collection type="java.util.ArrayList">
                 	<value><string>exo:jsFile</string></value>
                </collection>
            	</field>
            </object>
           </object-param>
           <object-param>
            <name>webFolderFilter</name>
            <description>only exo:webContent can be created in exo:webFolder</description>
            <object type="org.exoplatform.services.cms.templates.ContentTypeFilterPlugin$FolderFilterConfig">
            	<field  name="folderType"><string>exo:webFolder</string></field>            	
              <field  name="contentTypes">
                <collection type="java.util.ArrayList">
                 	<value><string>exo:webContent</string></value>
                </collection>
            	</field>
            </object>
           </object-param>
           <object-param>
            <name>webLinkFolderFilter</name>
            <description>only exo:webContent can be created in exo:webFolder</description>
            <object type="org.exoplatform.services.cms.templates.ContentTypeFilterPlugin$FolderFilterConfig">
            	<field  name="folderType"><string>exo:linkFolder</string></field>            	
              <field  name="contentTypes">
                <collection type="java.util.ArrayList">
                 	<value><string>exo:link</string></value>
                </collection>
            	</field>
            </object>
           </object-param>               
         </init-params>        	      
    	</component-plugin>
      <component-plugin>
        <name>addTemplates</name>
        <set-method>addTemplates</set-method>
        <type>org.exoplatform.services.cms.templates.impl.TemplatePlugin</type>    
        <init-params>
	        <value-param>
	        	<name>autoCreateInNewRepository</name>
	        	<value>true</value>
	        </value-param>
	        <value-param>
	        	<name>storedLocation</name>
	        	<value>war:/conf/wcm/artifacts/nodetypes-templates</value>
	        </value-param>
	        <value-param>
	        	<name>repository</name>
	        	<value>repository</value>
	        </value-param>	        
          <object-param>
            <name>template.configuration</name>
            <description>configuration for the localtion of nodetypes templates to inject in jcr</description>
            <object type="org.exoplatform.services.cms.templates.impl.TemplateConfig">            	
              <field  name="nodeTypes">
                <collection type="java.util.ArrayList">               
                  <value>
                    <object type="org.exoplatform.services.cms.templates.impl.TemplateConfig$NodeType">
                      <field  name="nodetypeName"><string>exo:htmlFile</string></field>
                      <field  name="documentTemplate"><boolean>true</boolean></field>
                      <field  name="label"><string>HTML File</string></field>
                      <field  name="referencedView">
                        <collection type="java.util.ArrayList">
                          <value>                    
                            <object type="org.exoplatform.services.cms.templates.impl.TemplateConfig$Template">             
                              <field name="templateFile"><string>/htmlFile/views/view1.gtmpl</string></field>
                              <field name="roles"><string>*</string></field>                
                            </object>                      
                          </value>                          
                        </collection>
                      </field>                  
                      <field  name="referencedDialog">
                        <collection type="java.util.ArrayList">                          
                          <value>                    
                            <object type="org.exoplatform.services.cms.templates.impl.TemplateConfig$Template">             
                              <field name="templateFile"><string>/htmlFile/dialogs/dialog1.gtmpl</string></field>
                              <field name="roles"><string>*:/platform/administrators</string></field>                
                            </object>                      
                          </value>                      
                        </collection>
                      </field>                                    
                    </object>
                  </value>
                  
                  <value>
                    <object type="org.exoplatform.services.cms.templates.impl.TemplateConfig$NodeType">
                      <field  name="nodetypeName"><string>exo:cssFile</string></field>
                      <field  name="documentTemplate"><boolean>true</boolean></field>
                      <field  name="label"><string>CSS File</string></field>
                      <field  name="referencedView">
                        <collection type="java.util.ArrayList">
                          <value>                    
                            <object type="org.exoplatform.services.cms.templates.impl.TemplateConfig$Template">             
                              <field name="templateFile"><string>/cssFile/views/view1.gtmpl</string></field>
                              <field name="roles"><string>*</string></field>                
                            </object>                      
                          </value>                          
                        </collection>
                      </field>                  
                      <field  name="referencedDialog">
                        <collection type="java.util.ArrayList">                          
                          <value>                    
                            <object type="org.exoplatform.services.cms.templates.impl.TemplateConfig$Template">             
                              <field name="templateFile"><string>/cssFile/dialogs/dialog1.gtmpl</string></field>
                              <field name="roles"><string>*:/platform/administrators</string></field>                
                            </object>                      
                          </value>                      
                        </collection>
                      </field>                                    
                    </object>
                  </value>
                  
                  <value>
                    <object type="org.exoplatform.services.cms.templates.impl.TemplateConfig$NodeType">
                      <field  name="nodetypeName"><string>exo:jsFile</string></field>
                      <field  name="documentTemplate"><boolean>true</boolean></field>
                      <field  name="label"><string>JS File</string></field>
                      <field  name="referencedView">
                        <collection type="java.util.ArrayList">
                          <value>                    
                            <object type="org.exoplatform.services.cms.templates.impl.TemplateConfig$Template">             
                              <field name="templateFile"><string>/jsFile/views/view1.gtmpl</string></field>
                              <field name="roles"><string>*</string></field>                
                            </object>                      
                          </value>                          
                        </collection>
                      </field>                  
                      <field  name="referencedDialog">
                        <collection type="java.util.ArrayList">                          
                          <value>                    
                            <object type="org.exoplatform.services.cms.templates.impl.TemplateConfig$Template">             
                              <field name="templateFile"><string>/jsFile/dialogs/dialog1.gtmpl</string></field>
                              <field name="roles"><string>*:/platform/administrators</string></field>                
                            </object>                      
                          </value>                      
                        </collection>
                      </field>                                    
                    </object>
                  </value>
                  
                  <value>
                    <object type="org.exoplatform.services.cms.templates.impl.TemplateConfig$NodeType">
                      <field  name="nodetypeName"><string>exo:webContent</string></field>
                      <field  name="documentTemplate"><boolean>true</boolean></field>
                      <field  name="label"><string>Web Content</string></field>
                      <field  name="referencedView">
                        <collection type="java.util.ArrayList">
                          <value>                    
                            <object type="org.exoplatform.services.cms.templates.impl.TemplateConfig$Template">             
                              <field name="templateFile"><string>/webContent/views/view1.gtmpl</string></field>
                              <field name="roles"><string>*</string></field>                
                            </object>                      
                          </value>                          
                        </collection>
                      </field>                  
                      <field  name="referencedDialog">
                        <collection type="java.util.ArrayList">                          
                          <value>                    
                            <object type="org.exoplatform.services.cms.templates.impl.TemplateConfig$Template">             
                              <field name="templateFile"><string>/webContent/dialogs/dialog1.gtmpl</string></field>
                              <field name="roles"><string>*:/platform/administrators</string></field>                
                            </object>                      
                          </value>                      
                        </collection>
                      </field>                                    
                    </object>
                  </value>
                  
                  <value>
                    <object type="org.exoplatform.services.cms.templates.impl.TemplateConfig$NodeType">
                      <field  name="nodetypeName"><string>exo:link</string></field>
                      <field  name="documentTemplate"><boolean>true</boolean></field>
                      <field  name="label"><string>Web Link</string></field>
                      <field  name="referencedView">
                        <collection type="java.util.ArrayList">
                          <value>                    
                            <object type="org.exoplatform.services.cms.templates.impl.TemplateConfig$Template">             
                              <field name="templateFile"><string>/webLink/views/view1.gtmpl</string></field>
                              <field name="roles"><string>*</string></field>                
                            </object>                      
                          </value>                          
                        </collection>
                      </field>                  
                      <field  name="referencedDialog">
                        <collection type="java.util.ArrayList">                          
                          <value>                    
                            <object type="org.exoplatform.services.cms.templates.impl.TemplateConfig$Template">             
                              <field name="templateFile"><string>/webLink/dialogs/dialog1.gtmpl</string></field>
                              <field name="roles"><string>*:/platform/administrators</string></field>                
                            </object>                      
                          </value>                      
                        </collection>
                      </field>                                    
                    </object>
                  </value>
                                                                                          
                </collection>
              </field>
            </object>
          </object-param>
        </init-params>       
      </component-plugin>
  </external-component-plugins>
  
</configuration>
