<?xml version="1.0" encoding="ISO-8859-1"?>

<configuration>
  <component>
    <key>org.exoplatform.services.wcm.core.WcmService</key>
    <type>org.exoplatform.services.wcm.core.impl.WcmServiceImpl</type>
    <component-plugins>
	    <component-plugin>
	   		<name>CSSContentHandler</name>
	   		<set-method>addWebContentHandler</set-method>
	   		<type>org.exoplatform.services.wcm.core.impl.CSSContentHandler</type>
	   	</component-plugin>
	   	<component-plugin>
	   		<name>HTMLContentHandler</name>
	   		<set-method>addWebContentHandler</set-method>
	   		<type>org.exoplatform.services.wcm.core.impl.HTMLContentHandler</type>
	   	</component-plugin>
	   	<component-plugin>
	   		<name>JSContentHandler</name>
	   		<set-method>addWebContentHandler</set-method>
	   		<type>org.exoplatform.services.wcm.core.impl.JSContentHandler</type>
	   	</component-plugin>
	   	<component-plugin>
	   		<name>PortalContentHanler</name>
	   		<set-method>addWebContentHandler</set-method>
	   		<type>org.exoplatform.services.wcm.core.impl.PortalContentHanler</type>
	   	</component-plugin>	   		   	
   	</component-plugins>    
   </component>
   
   <component>   
     <type>org.exoplatform.services.wcm.skin.XSkinService</type>
   </component>
   
   <component>   
     <type>org.exoplatform.services.wcm.javascript.XJavascriptService</type>
   </component>
   
   <component>   
     <type>org.exoplatform.services.wcm.contribution.WebContributionService</type>
     <init-params>
       <properties-param>
          <name>service.params</name>
          <description>some init parameters for the service</description>
          <property name="web.contributor.group" value="/platform/web-contributor"/>                        
        </properties-param>       	      
	   </init-params>
   </component>      
       
   <external-component-plugins>
  	<target-component>org.exoplatform.services.jcr.RepositoryService</target-component>		
	  <component-plugin>
	    <name>add.nodeType</name>
	    <set-method>addPlugin</set-method>
	    <type>org.exoplatform.services.jcr.impl.AddNodeTypePlugin</type>
	    <init-params>
	      <values-param>
	        <name>autoCreatedInNewRepository</name>
	        <description>Node types configuration file</description>
	        <value>jar:/conf/wcm-nodetypes.xml</value>	        
	      </values-param>
	    </init-params>
	  </component-plugin>
	</external-component-plugins>
     
</configuration>
