	    </preference>	    	    	 	    	    
	    <preference>
	    	<name>mode</name>
	    	<value></value>	    	
	    	<read-only>false</read-only>
	    </preference>	 	    
			<preference>
				<name>order</name>
				<value></value>
				<read-only>false</read-only>
			</preference>
			<preference>
				<name>contents</name>
				<value></value>
				<read-only>false</read-only>
			</preference>
