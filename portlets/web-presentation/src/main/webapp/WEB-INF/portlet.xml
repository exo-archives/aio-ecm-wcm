  	<security-role-ref>
        <role-name>admin</role-name>
    	<role-link>admin</role-link>
    </security-role-ref>	
  </portlet>
  
    
  <portlet>
  	<description xml:lang="EN">Parameterized Content Viewer</description>
  	<portlet-name>ParameterizedContentViewerPortlet</portlet-name>
