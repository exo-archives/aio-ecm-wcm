<?xml version="1.0" encoding="UTF-8"?>
<portlet-app version="1.0" xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"> 

  <portlet>
    <description xml:lang="EN">Banner Portlet</description>
    <portlet-name>BannerPortlet</portlet-name>
    <display-name xml:lang="EN">Banner Portlet</display-name>
    <portlet-class>org.exoplatform.webui.application.portlet.PortletApplicationController</portlet-class>    
    <init-param>
      <name>webui.configuration</name>
      <value>/WEB-INF/conf/portlet/web/BannerPortlet/webui/configuration.xml</value>
    </init-param>    

    <expiration-cache>0</expiration-cache>
    <supports>
      <mime-type>text/html</mime-type>
			<portlet-mode>help</portlet-mode>
			<portlet-mode>edit</portlet-mode>      
    </supports>
    <supported-locale>en</supported-locale>
    <resource-bundle>locale.portlet.banner.BannerPortlet</resource-bundle>
    <portlet-info>
      <title>Banner Portlet</title>
      <short-title>Banner Portlet</short-title>
      <keywords>banner</keywords>
    </portlet-info>    
    
    <portlet-preferences>
      <preference>
        <name>template</name>
        <value>par:/groovy/banner/webui/UIBannerPortlet.gtmpl</value>
        <read-only>false</read-only>
      </preference>
      
      <preference>
        <name>repository</name>
        <value></value>
        <read-only>false</read-only>
      </preference>
      
      <preference>
        <name>workspace</name>
        <value></value>
        <read-only>false</read-only>
      </preference>
      
      <preference>
        <name>nodeUUID</name>
        <value></value>
        <read-only>false</read-only>
      </preference>
      
      <preference>
        <name>quickEdit</name>
        <value>true</value>
        <read-only>false</read-only>
      </preference>
    </portlet-preferences>        
  </portlet>
  
  <portlet>
    <description xml:lang="EN">Footer Portlet</description>
    <portlet-name>FooterPortlet</portlet-name>
    <display-name xml:lang="EN">Footer Portlet</display-name>
    <portlet-class>org.exoplatform.webui.application.portlet.PortletApplicationController</portlet-class>    
    
    <init-param>
      <name>webui.configuration</name>
      <value>/WEB-INF/conf/portlet/web/FooterPortlet/webui/configuration.xml</value>
    </init-param>    

    <expiration-cache>0</expiration-cache>
    <supports>
      <mime-type>text/html</mime-type>
			<portlet-mode>help</portlet-mode>
			<portlet-mode>edit</portlet-mode>      
    </supports>
    
    <supported-locale>en</supported-locale>
    <resource-bundle>locale.portlet.footer.FooterPortlet</resource-bundle>
    <portlet-info>
      <title>Footer Portlet</title>
      <short-title>Footer Portlet</short-title>
      <keywords>footer</keywords>
    </portlet-info>    
    
    <portlet-preferences>
      <preference>
        <name>template</name>
        <value>par:/groovy/footer/webui/UIFooterPortlet.gtmpl</value>
        <read-only>false</read-only>
      </preference>


		 	<preference>
        <name>repository</name>
        <value></value>
        <read-only>false</read-only>
      </preference>
      
      <preference>
        <name>workspace</name>
        <value></value>
        <read-only>false</read-only>
      </preference>
      
      <preference>
        <name>nodeUUID</name>
        <value></value>
        <read-only>false</read-only>
      </preference>
      
      <preference>
        <name>quickEdit</name>
        <value></value>
        <read-only>false</read-only>
      </preference>      
    </portlet-preferences>
    
  </portlet>   
</portlet-app>
