<%
	import org.exoplatform.wcm.webui.selector.UISelectPathPanel; 
	import org.exoplatform.wcm.webui.selector.content.UIContentTreeBuilder;
%>

<script>
function changeContentType(type) {
  <% for(String type : uicomponent.types) { %>

    if (type == "$type") {
        <%=  uicomponent.event("ChangeContentType", type).replaceAll("\\&amp;", "&") %>;
    }
  <% } %>
}
</script>

<div id="$uicomponent.id" class="UIWCMSearchContainer $uicomponent.id">
	<div style="padding:10px;float:left">
		<%String selected = "";%>
		<div style="float:left;padding:5px;">
			<%= _ctx.appRes("UIContentBrowsePanelOne.selectBoxValues.FilterBy")%> :
		</div>
		<div style="float:left;padding:5px;">
			<select onchange="changeContentType(this.value)">
				<%
					for(String type : uicomponent.types){
						if(type.equals(uicomponent.selectedValues)) selected = "selected";
						else selected = "";
				%>
						<option id="$type" $selected value="$type" >
							<%= _ctx.appRes("UIContentBrowsePanelOne.selectBoxValues." + type) %>
						</option>
				<%}%>
			</select>
		</div>
	</div>
	<div style="clear:left"><span></span></div>
	<div>
		<div class="UITreeViewBreadcumbs" id = "UIWCMTreeViewBreadcumbs">
			<div id="UIWCMTreeViewBreadcumbsHomeIcon" class="TreeHomeIcon"></div>
			<div style="clear:left"><span></span></div>
		</div>
	</div>
	<div class="SelectContent"> 
		<div class="UITreeBuilder">
			<div class="Title"><%= _ctx.appRes("UIContentBrowsePanelOne.label.LeftColumn") %></div>
			<% uicomponent.renderChild(UIContentTreeBuilder.class); %>
		</div>
		<div class="UISelectPathPanel">
			<div class="Title"><%= _ctx.appRes("UIContentBrowsePanelOne.label.RightColumn") %></div>
			<% uicomponent.renderChild(UISelectPathPanel.class); %>
		</div>
	</div>
</div>
